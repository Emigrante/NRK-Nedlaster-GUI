<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NRKLastNed.Mac.ViewModels"
        xmlns:models="clr-namespace:NRKLastNed.Mac.Models"
        mc:Ignorable="d" d:DesignWidth="1050" d:DesignHeight="600"
        x:Class="NRKLastNed.Mac.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="NRK Nedlaster GUI" Height="600" Width="1050"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BgDark}"
        Foreground="{DynamicResource TextColor}">

    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="NRK NEDLASTER GUI" FontSize="24" FontWeight="Bold" 
                   Foreground="{DynamicResource AccentColor}" VerticalAlignment="Top"/>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
            <TextBlock Text="{Binding UpdateNotificationText}" 
                       Foreground="#FF4444" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center" 
                       Margin="0,0,20,0"
                       FontSize="14"/>

            <Button Content="Innstillinger" Click="OpenSettings_Click" Margin="0,0,10,0"/>
            <Button Content="Om" Click="OpenAbout_Click"/>
        </StackPanel>

        <Border Grid.Row="1" Background="{DynamicResource BgLight}" CornerRadius="10" Padding="15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="URL (Serie, Episode eller Film):" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <TextBox Grid.Column="1" 
                         Text="{Binding InputUrl}" 
                         FontSize="14" 
                         Background="{DynamicResource BgInput}"
                         BorderBrush="{DynamicResource BorderColor}"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"
                         Padding="8,5"/>

                <Button Grid.Column="2" Content="LEGG TIL" Command="{Binding AddCommand}" Margin="10,0,0,0" Width="100"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="{DynamicResource BgLight}" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Grid Grid.Row="0" Background="{DynamicResource BgDark}" Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="#" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="S/Ep" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
                    <TextBlock Grid.Column="2" Text="Tittel" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
                    <TextBlock Grid.Column="3" Text="Oppløsning" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
                    <TextBlock Grid.Column="4" Text="Språk" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
                    <TextBlock Grid.Column="5" Text="Status" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
                    <TextBlock Grid.Column="6" Text="Fremdrift" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
                </Grid>
                
                <!-- Items -->
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding DownloadItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:DownloadItem">
                                <Grid Height="35" Background="{DynamicResource BgLight}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SeasonEpisode}" VerticalAlignment="Center" Margin="5,0"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Title}" VerticalAlignment="Center" Margin="5,0" TextTrimming="CharacterEllipsis"/>
                                    <ComboBox Grid.Column="3" ItemsSource="{Binding AvailableResolutions}" SelectedItem="{Binding SelectedResolution}" VerticalAlignment="Center" Margin="2"/>
                                    <ComboBox Grid.Column="4" ItemsSource="{Binding AvailableLanguages}" SelectedItem="{Binding SelectedLanguage}" VerticalAlignment="Center" Margin="2"/>
                                    <TextBlock Grid.Column="5" Text="{Binding Status}" VerticalAlignment="Center" Margin="5,0" TextTrimming="CharacterEllipsis"/>
                                    <ProgressBar Grid.Column="6" Value="{Binding Progress}" Maximum="100" Height="15" VerticalAlignment="Center" Margin="5,0"
                                                Foreground="{DynamicResource AccentColor}" Background="#444"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource TextMuted}"/>
                <TextBlock Text="{Binding BatchStatusMessage}" Foreground="{DynamicResource AccentColor}" 
                          FontSize="11" Margin="0,2,0,0"/>
                <ProgressBar Value="{Binding TotalProgress}" Height="5" Margin="0,5,10,0" 
                            Background="#333" BorderThickness="0" 
                            Foreground="{DynamicResource AccentColor}"/>
            </StackPanel>

            <Button Grid.Column="1" Content="{Binding StartButtonText}" Command="{Binding DownloadCommand}" 
                   FontSize="16" Padding="30,10"/>
        </Grid>
    </Grid>
</Window>
